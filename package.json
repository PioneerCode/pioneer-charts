{
  "name": "pioneer-charts",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "ng serve pioneer-charts-docs",
    "start-web": "ng serve pioneer-charts-web",
    "start-components": "ng build @pioneer-code/pioneer-charts --watch",
    "build:docs": "ng build pioneer-charts-docs ",
    "build:lib": "npm run build:lib:package && npm run build:lib:sass && npm run build:lib:theme  && npm run build:lib:readme",
    "build:lib:publish": "npm run build:lib && npm publish ./dist/pioneer-charts --access public",
    "build:lib:readme": "node ./build/readme.js",
    "build:lib:package": "ng build @pioneer-code/pioneer-charts",
    "build:lib:theme": "node ./build/theme.js",
    "build:lib:sass": "node ./build/sass.js"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.4",
    "@angular/cdk": "^20.2.1",
    "@angular/common": "^20.2.4",
    "@angular/compiler": "^20.2.4",
    "@angular/core": "^20.2.4",
    "@angular/forms": "^20.2.4",
    "@angular/material": "^20.2.1",
    "@angular/platform-browser": "^20.2.4",
    "@angular/router": "^20.2.4",
    "@tailwindcss/postcss": "^4.1.11",
    "postcss": "^8.5.6",
    "rxjs": "~7.5.0",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.2",
    "@angular/cli": "~20.2.2",
    "@angular/compiler-cli": "^20.2.4",
    "@types/d3": "^7.4.3",
    "@types/jasmine": "~4.0.0",
    "@types/node": "^24.2.0",
    "bootstrap": "^5.3.7",
    "cpy": "^11.1.0",
    "d3": "^7.9.0",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.1.0",
    "sass": "^1.90.0",
    "typescript": "~5.8.3"
  }
}
